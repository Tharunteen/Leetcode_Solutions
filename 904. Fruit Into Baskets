class Solution {
    public int totalFruit(int[] fruits) {
        Map<Integer,Integer> a=new HashMap<>();
        int i=0,j=0,ans=0;
        while(j<fruits.length){
            a.put(fruits[j],a.getOrDefault(fruits[j],0)+1);
            while(a.size()>2){
                a.put(fruits[i],a.get(fruits[i])-1);
                if(a.get(fruits[i])==0){
                    a.remove(fruits[i]);
                }
                i++;
            }
            ans=Math.max(ans,j-i+1);
            j++;
        }
        
        return ans;
    }
}
