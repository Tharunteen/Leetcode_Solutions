class Solution {
    public List<Boolean> kidsWithCandies(int[] candies, int extraCandies) {
        ArrayList<Integer> a=new ArrayList<>();
        List<Boolean> c=new ArrayList<Boolean>(); 
        for(int i=0;i<(candies.length);i++){
                a.add(candies[i]);
        }
        int b=a.size();
        for(int i=0;i<(b);i++){
            int m=a.get(i)+extraCandies;
            a.set(i,m);
            if(m==Collections.max(a)) {
                c.add(true);
            }
            else{
                c.add(false);
            }
            m=a.get(i)-extraCandies;
            a.set(i,m);
        }
        return c;
    }

}
