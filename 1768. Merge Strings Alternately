import java.util.*;
class Solution {
    String mergeAlternately(String word1, String word2) {
       //Scanner in=new Scanner(System.in);
       String a= word1;
       String b=word2;
       int al=a.length();
       int bl=b.length();
       ArrayList<Character> list=new ArrayList<>();
       if(al==bl){
        for(int i=0;i<al;i++){
            list.add(a.charAt(i));
            list.add(b.charAt(i));
        }
       }
        if(al>bl){
            for(int i=0;i<bl;i++){
                list.add(a.charAt(i));
                list.add(b.charAt(i));
            }
            for(int i=bl;i<al;i++){
                list.add(a.charAt(i));
            }
        }
        if(bl>al){
            for(int i=0;i<al;i++){
                list.add(a.charAt(i));
                list.add(b.charAt(i));
            }
            for(int i=al;i<bl;i++){
                list.add(b.charAt(i));
            }
        }
        String s="";
        for(int i=0;i<list.size();i++){
            s=s+(list.get(i));
        }
        return s;
       }

    }
