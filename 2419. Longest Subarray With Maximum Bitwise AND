class Solution {
    public int longestSubarray(int[] nums) {
        int max=0;
        int streak=0;
        int ans=0;
        for(int n:nums){
            if(max<n){
                max=n;
                ans=streak=0;
            }
            if(max==n){
                streak++;
            }else{
                streak=0;
            }
            ans=Math.max(ans,streak);
        }
        return ans;
    }
}
