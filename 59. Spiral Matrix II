class Solution {
    public int[][] generateMatrix(int n) {
        int a[][]=new int[n][n];
        int top=0;
        int down=n-1;
        int left=0;
        int right=n-1;
        int num=1;
        while(top<=down && left<=right){
            for(int i=left;i<=right;i++){
                a[top][i]=num++;
            }
            top++;
            for(int i=top;i<=down;i++){
                a[i][right]=num++;
            }
            right--;
            if(left<=right && top<=down){
                for(int i=right;i>=left;i--){
                    a[down][i]=num++;
                }
                down--;
                for(int i=down;i>=top;i--){
                    a[i][left]=num++;
                }
                left++;
            }
        
        
        
                }
    return a;

    }
}
