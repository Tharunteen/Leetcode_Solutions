class Solution {
    public int minCapability(int[] nums, int k) {
        int low=0,high=0;
        for(int i:nums){
            high=Math.max(high,i);
        }
        while(low<high){
            int mid=(low+high)/2;
            if(canp(nums,mid,k)){
                high=mid;
            }
            else{
                low=mid+1;
            }
        }
    return low;
    }
    public boolean canp(int[] nums,int max,int k){
        int i=0;
        int c=0;
        while(i<nums.length){
            if(nums[i]<=max){
                c++;
                i+=2;
            }else{
                i++;
            }
        }
        return c>=k;
    }
}
